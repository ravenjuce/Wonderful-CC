<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@drawable/boxh"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.normal.HomepageActivity">
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="#B2DFEE"
        android:queryBackground="@color/yellow"
        android:iconifiedByDefault="true"

        android:queryHint="  @Auther#TAG  "/>


    <TextView
        android:id="@+id/home_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="WonderfulCC"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginBottom="36dp"
        android:textColor="@color/purple_700"
        />

    <Button
        android:id="@+id/addSomeone"
        android:layout_width="250dp"
        android:layout_height="50dp"

        android:onClick="addFriend"
        android:text="My Friends"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/showPosts"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"

        android:text="show posts" />

    <Button
        android:id="@+id/home_btn_me"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="toMePage"
        android:text="Me" />

    <Button
        android:id="@+id/buttonCheckFollow"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Check Follow" />




</LinearLayout>